{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "cmake ./ && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/fish-shell"
            }
        },
        {
            "type": "shell",
            "label": "Test",
            "command": "make test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/fish-shell"
            },
            "dependsOn": ["Build"]
        },
        {
            "type": "shell",
            "label": "Install",
            "command": "make install",
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}/fish-shell"
            },
            "dependsOn": ["Build"],
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "make clean",
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}/fish-shell"
            },
        }
    ]
}