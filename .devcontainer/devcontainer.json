// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"name": "C++",
	"dockerFile": "Dockerfile",
	"extensions": [
		"ms-vscode.cpptools",
		"lunaryorn.fish-ide"
	],
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"postCreateCommand": "[ -d /workspaces/vscode-remote-fish-shell/fish-shell ] && cd /workspaces/vscode-remote-fish-shell/fish-shell && cmake ./ -DCMAKE_BUILD_TYPE=Debug && make",
}